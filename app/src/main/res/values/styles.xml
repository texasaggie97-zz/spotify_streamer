<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">

    </style>

    <style name="PlayerImageStyle">
        <item name="android:paddingTop">@dimen/player_vert_padding</item>
        <item name="android:layout_width">@dimen/player_image_width</item>
        <item name="android:layout_height">@dimen/player_image_height</item>
    </style>

    <style name="PlayerTextStyle">
        <item name="android:paddingTop">@dimen/player_vert_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlayerProgressStyle" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:paddingTop">@dimen/player_vert_padding</item>
        <item name="android:layout_width">@dimen/player_progress_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>
</resources>
