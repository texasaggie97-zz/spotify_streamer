<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/notification"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/notification_thumbnail"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="6"
        android:id="@+id/notification_control_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_track"
            android:layout_centerVertical="true"
            android:text="Testing"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/black"
            />

        <ImageButton
            android:id="@+id/notification_back_button"
            android:src="@drawable/ic_skip_previous_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/notification_play_pause_button"
            />

        <ImageButton
            android:id="@+id/notification_play_pause_button"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/notification_next_button"
            />

        <ImageButton
            android:id="@+id/notification_next_button"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>
</LinearLayout>